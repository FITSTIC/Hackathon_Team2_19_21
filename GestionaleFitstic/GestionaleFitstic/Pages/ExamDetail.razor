@page "/examdetail/{ExamId:int}"
@page "/examdetail"

@using GestionaleFitstic.Data
@using Microsoft.EntityFrameworkCore
@inject ApplicationDbContext db
@inject NavigationManager Navi
@inject IJSRuntime JSRuntime
<!-- FORM EDIT -->

@if (ExamId == 0)
{
    <h3>Inserisci un nuovo esame</h3>
}
else
{
    <h3>Modifica un esame</h3>
}

<EditForm Model="@e" OnValidSubmit="()=>SaveExam()">
    <DataAnnotationsValidator />
    <div class="form-group">
        <label>Studente</label>
        <InputSelectNumber class="form-control" id="student" @bind-Value="e.StudentId">
            <option value="">Seleziona uno studente</option>
            @foreach (var student in students)
            {
                <option value="@student.Id">@student.Name</option>
            }
        </InputSelectNumber>
    </div>
    <div class="form-group">
        <label>Modulo</label>
        <InputSelectNumber class="form-control" id="module" @bind-Value="e.ModuleId">
            <option value="">Seleziona un modulo</option>
            @foreach (var module in modules)
            {
                <option value="@module.Id">@module.Name</option>
            }
        </InputSelectNumber>
    </div>
    <div class="form-group">
        <label>Data dell'esame</label>
        <InputDate class="form-control" id="examDate" @bind-Value="e.Date" />
    </div>
    <div class="form-group">
        <label>Voto</label>
        <InputNumber class="form-control" id="grade" @bind-Value="e.Grade" />
    </div>
    <button type="submit" class="btn btn-success">Salva modifiche</button>
</EditForm>

@code {
    private Exam e;
    private Exam[] exames;
    private Student[] students;
    private Module[] modules;
    [Parameter]
    public int ExamId { get; set; }
    string message = "Vuoi salvare i cambiamenti?";

    protected override async Task OnInitializedAsync()
    {
        students = await db.Students
            .AsNoTracking()
            .OrderBy(x => x.Name)
            .ToArrayAsync();

        modules = await db.Modules
            .AsNoTracking()
            .OrderBy(x => x.Name)
            .ToArrayAsync();

        if (ExamId == 0)
        {
            e = new Exam()
            {
                Date = DateTime.Now,
                Grade = 0
            };
        }
        else
        {
            e = await db.Exams.FindAsync(ExamId);
        }
    }

    private async Task SaveExam()
    {
        bool resultY = await ConfirmSave();
        if (resultY)
        {
            if (ExamId == 0)
            {
                db.Exams.Add(e);
                await db.SaveChangesAsync();
                StateHasChanged();
                e = new Exam();
            }
            else
            {
                await db.SaveChangesAsync();
            }
            Navi.NavigateTo("/exams");
        }
    }

    private async Task<bool> ConfirmSave()
    {
        bool result = await JSRuntime.InvokeAsync<bool>("confirm", new[] { message });
        return result;
    }
} 